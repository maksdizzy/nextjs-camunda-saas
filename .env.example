# Next.js SaaS Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
# Get these from Clerk Dashboard: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Optional: Clerk URLs (defaults are usually fine)
# NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
# NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# =============================================================================
# GURU FRAMEWORK API
# =============================================================================
# FastAPI Proxy URL (for workflow operations)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Alternative for production
# NEXT_PUBLIC_API_URL=https://your-api-domain.com

# =============================================================================
# DATABASE (POSTGRES)
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/nextjs_saas

# Alternative for production
# DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# OPTIONAL: STRIPE (if using payments)
# =============================================================================
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# OPTIONAL: SENTRY (if using error monitoring)
# =============================================================================
# SENTRY_DSN=https://...@sentry.io/...
# NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...

# =============================================================================
# OPTIONAL: ANALYTICS
# =============================================================================
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-...
