# Next.js SaaS Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# CLERK AUTHENTICATION (REQUIRED)
# =============================================================================
# Get these from Clerk Dashboard: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Clerk URLs (REQUIRED - use these defaults)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# =============================================================================
# GURU FRAMEWORK API
# =============================================================================
# FastAPI Proxy URL (for workflow operations)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Alternative for production
# NEXT_PUBLIC_API_URL=https://your-api-domain.com

# =============================================================================
# DATABASE (POSTGRES)
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/nextjs_saas

# Alternative for production
# DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# STRIPE PAYMENTS (REQUIRED)
# =============================================================================
# Get these from Stripe Dashboard: https://dashboard.stripe.com/
# For development, use test mode keys (pk_test_... and sk_test_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Billing plan environment (REQUIRED)
# Use 'dev' for local development, 'test' for staging, 'prod' for production
BILLING_PLAN_ENV=dev

# =============================================================================
# OPTIONAL: SENTRY (if using error monitoring)
# =============================================================================
# SENTRY_DSN=https://...@sentry.io/...
# NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...

# =============================================================================
# OPTIONAL: ANALYTICS
# =============================================================================
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-...
